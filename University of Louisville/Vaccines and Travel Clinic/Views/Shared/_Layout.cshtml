<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University of Louisville Vaccines and Travel</title>
    <link href="~/Content/calendar.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    .nav > li > a {
        position: relative;
        display: block;
        padding: 10px 13px !important;
    }
</style>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" title="Vaccine and Internation Travel">
                    <img style="max-width:125px; margin-top: -7px;" src="~/Images/logo.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    
                    

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Services <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Our Services", "Services", "Home")</li>
                            <li>@Html.ActionLink("Immunizations", "Immunization", "Home")</li>
                            <li>@Html.ActionLink("Civil Surgeon", "Surgeon", "Home")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">About <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Our Research", "Research", "Home")</li>
                            <li>@Html.ActionLink("Our Partners", "Partners", "Home")</li>
                        </ul>
                    </li>
                    
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("CanModifyUsers") || User.IsInRole("CanViewUsers") || User.IsInRole("CanModifyInventory") || User.IsInRole("CanViewInventory") )
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Accounts <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Users", "Index", "Users")</li>
                                <li>@Html.ActionLink("Groups", "Index", "Groups")</li>
                                <li>@Html.ActionLink("Permissions", "Index", "Roles")</li>
                               
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Inventory <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Suppliers", "Index", "Suppliers")</li>
                                <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                                <li>@Html.ActionLink("Order Lines", "Index", "OrderLines")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Items", "Index", "Items")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Sale Lines", "Index", "SaleLines")</li>
                                <li>@Html.ActionLink("Sale", "Index", "Sales")</li>
                                <li>@Html.ActionLink("Locations", "Index", "Locations")</li>
                                <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Calendar", "Index", "Calendar")</li>
                        <li><a href="https://cardmaillouisville.sharepoint.com/_layouts/groupstatus.aspx?id=3538531e-3deb-4930-8277-48afd53b8b83&target=documents" target="_blank">OneDrive</a></li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container-fluid">
                <p style="text-align:right">
                    Vaccine and International Travel Center<br />
                    Located in the 550 Clinic<br />
                    550 S. Jackson Street<br />
                    Ambulatory Care Building, 2nd Floor <br />
                    Louisville, KY  40202<br />
                    <a class="btn btn-xs btn-primary" href="@Url.Action("Contact", "Home")">Google Maps</a>
                </p>
                <p style="text-align:center">&copy; @DateTime.Now.Year - University of Louisville, Division of Infectious Diseases. All Rights Reserved.</p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
